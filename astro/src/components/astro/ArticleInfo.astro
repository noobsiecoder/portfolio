---
interface Props {
  date: string;
  TimeTakenToRead: string;
  topic: string;
}

const { date, TimeTakenToRead, topic } = Astro.props;
---

<div class="flex items-center justify-center gap-x-2">
  <h4
    class="font-poppins text-xs xl:text-sm font-light tracking-tight text-stone-800 dark:text-stone-300"
  >
    {new Date(date).toDateString()}
  </h4>{" "}
  <h4
    class="font-poppins text-xs xl:text-sm font-light tracking-tight text-stone-800 dark:text-stone-300"
  >
    |
  </h4>
  <h4
    class="font-poppins text-xs xl:text-sm font-light tracking-tight text-stone-800 dark:text-stone-300"
  >
    {TimeTakenToRead}
  </h4>
  <h4
    class="font-poppins text-xs xl:text-sm font-light tracking-tight text-stone-800 dark:text-stone-300"
  >
    |
  </h4>
  <h4
    class="font-poppins text-xs xl:text-sm font-light tracking-tight text-stone-800 dark:text-stone-300"
  >
    {topic}
  </h4>
</div>
